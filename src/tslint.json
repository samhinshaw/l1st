{
  "extends": [
    "tslint-import-group-ordering",
    // Start with airbnb rules
    "tslint-config-airbnb-base",
    // Finally, setup prettier integration
    "tslint-config-prettier",
    "tslint-plugin-prettier"
  ],
  "prettier": true,
  "arrow-return-shorthand": [true, "multiline"],
  "ordered-imports": [
    true,
    {
      "import-sources-order": "case-insensitive",
      "named-imports-order": "case-insensitive"
    }
  ],
  "interface-over-type-literal": true,
  "ter-prefer-arrow-callback": [
    true,
    {
      "allowNamedFunctions": true
    }
  ],
  "import-group-ordering": {
    "severity": "warning",
    "options": {
      "imports-groups": [
        {
          "name": "dependencies"
        },
        {
          "name": "other"
        },
        {
          "name": "relative"
        }
      ],
      "matching-rules": [
        {
          "type": "dependencies",
          "imports-group": "dependencies",
          "disable-native-nodejs-modules": true,
          "from-package.json": true
        },
        {
          "type": "relative",
          "imports-group": "relative",
          "matches": "^(\\.)"
        },
        {
          "type": "project",
          "matches": ".*",
          "imports-group": "other"
        }
      ]
    }
  }
}
